{
  "provisioners": [
    {  
      "type": "file",
      "source": "~/InstallationApplicationGcloud/Credits/account.json",
      "destination": "~/"
    },
    {  
      "type": "file",
      "source": "~/InstallationApplicationGcloud/Credits/template.json",
      "destination": "~/"
    },
    {
      "type": "shell",
      "execute_command":"chmod +x {{ .Path }}; sudo '{{ .Path }}'",
      "inline": [
        "sudo apt-get install git -y",
        "cd var/",
        "git clone https://github.com/KoenHaemels/InstallationApplicationGcloud.git",
        "cd InstallationApplicationGcloud/",
        "sudo mv ~/account.json Credits/",
        "sudo mv ~/template.json Credits/",
        "./main.sh"
      ]
    }
    
  ],

  "builders": [
    {
      "type": "googlecompute",
      "project_id": "projectID",
      "account_file": "accountFILE",
      "source_image": "ubuntu-1604-xenial-v20170330",
      "zone": "europe-west1-b",
      "ssh_username": "ubuntu",
      "ssh_password": "cvotest",
      "image_name": "packer-image-stage"
    }
  ]
}
